                <button type="button" class="btn btn-warning mx-0 px-5">delete</button>
            </a>
            <a href="/post/<%=thePost.title%>/edit">
                <button type="button" class="btn btn-success mx-0 px-5">edit</button>
            </a>
        </div>
    </div>
</div>

